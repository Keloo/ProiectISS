<div class="row">

    <div class="col-md-4">
        <label class="control-label">Name On Card</label>
        <input type="text" id="membership-card-name" class="form-control" placeholder="Card Holder Name" data-defaultValue="#">
    </div>

    <div class="col-md-4">
        <label class="control-label">Card Number</label>
        <input type="text" id="membership-card-number" class="form-control" placeholder="XXXX-XXXX-XXXX-1234" data-defaultValue="#">
    </div>

    <div class="col-md-2">
        <label class="control-label">MM</label>
        <input type="text" id="membership-card-exp-month" class="form-control" placeholder="MM" data-defaultValue="#">
    </div>

    <div class="col-md-2">
        <label class="control-label">YYYY</label>
        <input type="text" id="membership-card-exp-year" class="form-control" placeholder="YYYY" data-defaultValue="#">
    </div>

    <div class="col-md-4">
        <label class="control-label">CVV</label>
        <input type="text" id="membership-card-cvv" class="form-control" placeholder="CVV" data-defaultValue="">
    </div>

    <div class="col-md-8">
        <label class="control-label">Billing Address</label>
        <input type="text" id="membership-card-address" name="card-address" class="form-control" placeholder="Address" data-defaultValue="#">
    </div>
    <input type="hidden" name="stripeTokenEventReg" class="stripeTokenEventReg">
</div>

<button type="button">Make payment</button>
{% block javascripts %}
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
{% endblock %}

