{% extends "::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block javascripts %}
    {{ parent() }}
    {#<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>#}
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/stripe.js') }}"></script>
{% endblock %}

{% block body %}

    {#{% include "::/components/header_login.html.twig" %}#}
    <div id="main" role="main">
        <div id="content" class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
                    <div class="well no-padding">
                        <form type="POST" action="{{ path('payment_action') }}" id="payForm" onSubmit="return checkPay()" class="smart-form client-form">
                            <header>
                                Payment
                            </header>
                            <fieldset>
                                <section>
                                    <label class="label">Card Holder Name</label>
                                    <label class="input">
                                        <input type="text" id="membership-card-name"  placeholder="Card Holder Name" data-defaultValue="#" required="required">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter username</b></label>
                                </section>

                                <section>
                                    <label class="label">Card Number</label>
                                    <label class="input">
                                        <input type="text" id="membership-card-number" placeholder="XXXX-XXXX-XXXX-1234" data-defaultValue="#"  required="required">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
                                </section>

                                <section>
                                    <label class="label">MM</label>
                                    <label class="input">
                                        <input type="text" id="membership-card-exp-month" placeholder="MM" data-defaultValue="#"  required="required">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
                                </section>

                                <section>
                                    <label class="label">CVV</label>
                                    <label class="input">
                                        <input type="text" id="membership-card-cvv" class="form-control" placeholder="CVV" data-defaultValue=""  required="required"/>
                                        {#<b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> CVV</b> #}
                                    </label>
                                </section>

                                <section>
                                    <label class="label">YYYY</label>
                                    <label class="input">
                                        <input type="text" id="membership-card-exp-year" class="form-control" placeholder="YYYY" data-defaultValue="#"  required="required"/>
                                    </label>
                                </section>
                            </fieldset>
                            <footer>

                                <button name="_submit" type="submit" class="btn btn-primary" id="payButton">
                                    Make payment
                                </button>
                            </footer>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

