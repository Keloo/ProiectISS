{% extends '::board/base.html.twig' %}

{% block body %}
    <div id="main" role="main">
        <div id="ribbon">
            <ol class="breadcrumb">
                <li>Abstract Paper</li><li>Edit</li>
            </ol>
        </div>

        <div id="content">

            <div class="jarviswidget jarviswidget-sortable" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" role="widget">
                <header role="heading">
                    <span class="widget-icon"> <i class="fa fa-eye"></i> </span>
                    <h2>Abstract Paper edit</h2>
                </header>

                <div role="content">

                    <form action="{{ path('paper_edit', { 'id': paper.id }) }}" method="post">

                        Title:
                        <br>
                        {{ form_widget(edit_form.title) }}
                        <br>
                        <br>

                        Description:
                        <br>
                        {{ form_widget(edit_form.description) }}
                        <br>
                        <br>

                        Updated At:
                        <br>
                        {{ form_widget(edit_form.updated_at) }}
                        <br>
                        <br>

                        Paper Type:
                        <br>
                        {{ form_widget(edit_form.paperType) }}
                        <br>
                        <br>

                        Paper:
                        <br>
                        {{ form_widget(edit_form.paper_file) }}
                        <br>

                        {{ form_widget(edit_form._token) }}

                        <br>
                        <input class="btn btn-primary" type="submit" value="Edit" />
                    </form>
                    <br>
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                    <br>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
